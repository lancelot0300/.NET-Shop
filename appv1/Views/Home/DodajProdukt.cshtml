@model appv1.DAL.Models.Products

@{
    
}

<form asp-action="DodajProdukt">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="Nazwa" class="control-label"></label>
        <input asp-for="Nazwa" class="form-control" />
        <span asp-validation-for="Nazwa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="KodProduktu" class="control-label"></label>
        <input asp-for="KodProduktu" class="form-control" />
        <span asp-validation-for="KodProduktu" class="text-danger"></span>
    </div>
        <div class="form-group">
        <label asp-for="Ilosc" class="control-label"></label>
        <input type="text" asp-for="Ilosc" class="form-control" />
        <span asp-validation-for="Ilosc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cena" class="control-label"></label>
        <input type="text" asp-for="Cena" class="form-control" />
        <span asp-validation-for="Cena" class="text-danger"></span>
    </div>
    <div class="form-group">
         <select asp-for="Kategoria" class="control-label">">

            <option value="Slodycze">Słodycze</option>

            <option value="Warzywa">Warzywa</option>

            <option value="Owoce">Owoce</option>

            <option selected="selected" value="Nabial">Nabiał</option>

            </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Dodaj" class="btn btn-primary" />
    </div>
</form>