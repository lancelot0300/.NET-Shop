@{
    ViewData["Title"] = "Home Page";
    @using Microsoft.AspNetCore.Http;
    @using appv1.Controllers
    @using appv1.Models
    @inject IHttpContextAccessor HttpContextAccessor

}



<div class="text-center">
    <h1 class="display-4">Witaj</h1>
    <div class="row">
        <p>@ViewBag.Message</p>
         @if(!string.IsNullOrEmpty(@HttpContextAccessor.HttpContext.Session.GetString("username")))
            {
                <p>Login: @HttpContextAccessor.HttpContext.Session.GetString("username")</p>
              }
        </div>
        <div class="row">
            <div class="col-lg-12"> 

    @using (Html.BeginForm("Logout", "Home"))
            { @if(!string.IsNullOrEmpty(@HttpContextAccessor.HttpContext.Session.GetString("username")))
            {
                <input type="submit" value="Wyloguj" class="btn btn-primary" />
            }
           
        }
       </div>   
    
        </div><br />
        
    
</div>
